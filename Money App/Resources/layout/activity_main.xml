
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- Section One -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:elevation="4dp"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:src="@drawable/personal1"/>

            <TextView
                android:layout_marginLeft="15dp"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uchenna Nnodim"
                android:layout_toRightOf="@+id/profileImage"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/palceTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/nameTextView"
                android:text="New Jersey, USA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/phonecall"
                android:layout_alignParentRight="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/palceTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/colorOrange"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Section Two -->
    <RelativeLayout
        android:layout_weight="0.22"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            fontPath="fonts/GlacialIndifference-Bold.ttf"
            android:text="$32,000,00"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/balanceTextView"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_above="@+id/balanceTextView"
            android:gravity="center"
            android:text="Account Balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- Section Three -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frindImageView"
                android:src="@drawable/me"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:id="@+id/descriptionTextView"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Transfer to Julia"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDataTextView"
                android:text="22-May-2001"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:textColor="@color/colorRed"
                android:textSize="13sp"
                android:text="$7200.00"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frindImageView"
                android:src="@drawable/personal1"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:id="@+id/descriptionTextView"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Desposit from kaycee"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDataTextView"
                android:text="24-June-2001"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:text="$2300.00"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frindImageView"
                android:src="@drawable/personal"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:id="@+id/descriptionTextView"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Deposit from peter"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDataTextView"
                android:text="27-June-2001"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/frindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:text="$4100.00"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:drawableLeft="@drawable/history"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundedbutton"
                    android:text="View History"
                    android:textAllCaps="false"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>

                <Button
                    android:background="@drawable/roundedbutton"
                    android:layout_marginLeft="5dp"
                    android:text="New Transaction"
                    android:textAllCaps="false"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>